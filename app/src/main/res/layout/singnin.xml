<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/titre1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
       android:src="@drawable/sinin"
        android:textColor="@color/bleu"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="username"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:textAppearance="@style/SmallHintTextAppearance"
        android:inputType="textShortMessage"
        android:hint="@string/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre1"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/SmallHintTextAppearance"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:hint="@string/password"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:textSize="11sp"

        android:text="@string/forgotPass"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp" />
    <Button
        android:id="@+id/btnSin"
        android:layout_width="200dp"
        android:text="@string/signI"
        android:backgroundTint="@color/darkcorail"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/forgotpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp">

        <!-- Ligne -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"
            />
        <!-- Texte -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:padding="6dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <!-- Ligne -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:src="@drawable/fb"
            android:contentDescription="@string/fb"
            android:layout_marginStart="100dp"/> <!-- Marge nÃ©gative pour rapprocher -->

        <ImageView
            android:id="@+id/gg"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:contentDescription="@string/google"
            android:src="@drawable/google"/>


        <ImageView
            android:id="@+id/gmail"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:src="@drawable/gmail"
            android:layout_marginEnd="100dp"
            android:contentDescription="@string/email"/>
    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@id/social"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/Don" />
      <TextView
          android:id="@+id/create"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/signUp"
          android:textColor="@color/bleu"
          android:textStyle="bold"
          android:focusable="true"
          android:paddingHorizontal="3dp"
          android:clickable="true"
          app:layout_constraintTop_toBottomOf="@id/social"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

  </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
